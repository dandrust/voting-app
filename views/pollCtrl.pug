doctype html
html
    head
        title Poll Control - Pollster
        include css.pug
        
    body
        include navbar.pug
        div.container-fluid
            div.row
                div(class=['col-md-6', 'col-md-offset-3', 'vcenter'])
                    div.poll-container
                        p.block-title=  - data.active ? data.question : data.question + " (archived)"
                        br
                        table(class=['table', 'table-condensed'])
                            thead
                                tr 
                                    th 
                                        b
                                            i Response
                                    th 
                                        b
                                            i Votes
                            tbody
                                each val in data.options
                                    tr
                                        td= val.label
                                        td= val.votes
                        div.row
                            div(class=['col-sm-2', 'text-center'])
                                a(
                                    href='/archive?id=' + data.id
                                )
                                    if data.active
                                        span(
                                            class=['fa', 'fa-2x', 'fa-archive']
                                            data-toggle='tooltip'
                                            data-placement='bottom'
                                            title='Archive'

                                        )
                                    if !data.active
                                        span(
                                            class=['fa', 'fa-2x', 'fa-repeat']
                                            data-toggle='tooltip'
                                            data-placement='bottom'
                                            title='Restore'
                                        )
                            div(class=['col-sm-2', 'text-center'])
                                a(
                                    href='#'
                                )
                                
                                    span(
                                        data-toggle='tooltip'
                                        data-placement='bottom'
                                        title='Delete'
                                        class=['fa', 'fa-2x', 'fa-trash']
                                    )
                            div(class=['col-sm-2', 'text-center'])
                                a(
                                    href='showResults?id=' + data.id
                                )
                                    span(
                                        data-toggle='tooltip'
                                        data-placement='bottom'
                                        title='View Chart'
                                        class=['fa', 'fa-2x', 'fa-bar-chart'])
                            if data.active
                                div(class=['col-sm-2', 'text-center'])
                                    a(
                                        href='#'
                                    )
                                        span(
                                            data-toggle='tooltip'
                                            data-placement='bottom'
                                            title='Click to copy public link'
                                            data-clipboard-text='http://www.website.com/poll?id=' + data.id
                                            class=['fa', 'fa-2x', 'fa-clipboard']
                                        )
                                div(class=['col-sm-2', 'text-center'])
                                    a(
                                        href='poll?id=' + data.id
                                    )
                                        span(
                                            data-toggle='tooltip'
                                            data-placement='bottom'
                                            title='Go to live poll'
                                        class=['fa', 'fa-2x', 'fa-external-link'])
                                    
        div(
            class='modal fade'
            tabindex='-1'
            id='confirm-delete'
        )
            div(class='modal-dialog')
                div(class='modal-content')
                    div(class='modal-header modal-text')
                        button(
                            type='button'
                            class='close'
                            data-dismiss='modal'
                        )
                        h4 Confirm Delete
                    div(class='modal-body modal-text')
                        p Are you sure you want to delete this poll? All poll information will be lost, including results.
                        if data.active
                            p If you wish to keep results, archive the poll instead.
                    div(class='modal-footer modal-text')
                        button(
                            type='button'
                            class='btn btn-default'
                            data-dismiss='modal'
                        ) Cancel
                        if data.active
                            button(
                                type='button'
                                id='archive'
                                class='btn btn-primary'
                                value='/archive?id=' + data.id
                            ) Archive
                        button(
                            type='button'
                            id='delete'
                            class='btn btn-danger'
                            value='/remove?id=' + data.id
                        ) Delete
                         

                       
                        




        include footer.pug
        include js.pug
        script(
            src='js/clipboard.js'
            type='text/javascript'
        )
        script(
            src='js/pollCtrl.js'
            type='text/javascript'
        )
