doctype html
html
    head
        title View Poll - Pollster
        include css.pug
    body
        include navbar.pug
        div.container-fluid
            div(class=['row', 'vcenter'])
                div(
                    class=['col-md-4','col-md-offset-4', 'poll-container']
                )
                    p.block-title= data.question
                    br
                    form(
                        name='castVote'
                        action='poll'
                        method='post'
                    ) 
                        each val in data.options
                            div.form-group
                                div.radio
                                    label
                                        input(
                                            type='radio'
                                            name='optionNo'
                                            value= val.no
                                            class='option'
                                        )
                                        span= val.label
                        if data.addResponse
                            div(class=['form-group', 'custom-target'])
                                div.radio
                                    label
                                        input(
                                            type='radio'
                                            name='customOption'
                                            id='customOption'
                                            value=''
                                        )
                                        a(
                                            href='#'
                                            id='defineCustomOption'
                                        )
                                             | Add custom response    
                        input(
                            type='hidden'
                            name='pollId'
                            value= data.id
                        )
                        br
                        button(
                            type='submit'
                            class=['btn', 'btn-default', 'pull-right']
                        ) Vote
        include footer.pug
        include js.pug
        script(
            src='js/defineOption.js'
            type='text/javascript'
        )
        